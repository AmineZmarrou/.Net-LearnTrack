@model IEnumerable<Projet_Binome.Models.ViewModels.AdminUserViewModel>
@{
    ViewData["Title"] = "Administration - Utilisateurs";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Gestion des utilisateurs</h2>
    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Courses">Gerer les cours</a>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle table-clean">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Admin</th>
                <th>Inscrit le</th>
                <th>Cours</th>
                <th>Quiz</th>
                <th>Certificats</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@(u.IsAdmin ? "Oui" : "Non")</td>
                <td>@u.CreatedAt.ToShortDateString()</td>
                <td>@u.CoursesCount</td>
                <td>@u.QuizAttemptsCount</td>
                <td>@u.CertificatesCount</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="UserHistory" asp-route-id="@u.Id">Voir</a>
                    @if (!u.IsAdmin)
                    {
                        <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="d-inline ms-2" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
