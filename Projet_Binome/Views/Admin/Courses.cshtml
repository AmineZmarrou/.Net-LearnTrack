@model IEnumerable<Projet_Binome.Models.Course>
@using System.Linq
@{
    ViewData["Title"] = "Administration - Courses";
    var sortedCourses = Model.OrderBy(c => c.Title).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Gestion des cours</h2>
    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Users">Gerer les utilisateurs</a>
</div>

<div class="card progress-card mb-4">
    <div class="card-header panel-header panel-header--warm">Ajouter un cours</div>
    <div class="card-body">
        <p class="text-muted mb-3">Remplissez les champs pour ajouter un nouveau cours au catalogue.</p>
        <form asp-action="CreateCourse" method="post">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Titre</label>
                    <input name="Title" class="form-control" required />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Description</label>
                    <input name="Description" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">ImageUrl</label>
                    <input name="ImageUrl" class="form-control" placeholder="/images/xxx.jpg" />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Creer</button>
            </div>
        </form>
    </div>
</div>

<div class="card progress-card">
    <div class="card-header panel-header panel-header--sun">Cours existants (tri par titre)</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0 table-clean">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>ImageUrl</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var course in sortedCourses)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td>@course.ImageUrl</td>
                        <td class="text-end">
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary js-edit-course"
                                    data-course-id="@course.Id">
                                Editer
                            </button>
                            <form asp-action="DeleteCourse" method="post" class="d-inline ms-2" onsubmit="return confirm('Supprimer ce cours ?');">
                                <input type="hidden" name="id" value="@course.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    <tr id="edit-course-@course.Id" class="d-none">
                        <td colspan="5">
                            <form asp-action="UpdateCourse" method="post" class="p-3">
                                <input type="hidden" name="Id" value="@course.Id" />
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label">Titre</label>
                                        <input type="text" class="form-control" name="Title" value="@course.Title" required />
                                    </div>
                                    <div class="col-md-5">
                                        <label class="form-label">Description</label>
                                        <input type="text" class="form-control" name="Description" value="@course.Description" required />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">ImageUrl</label>
                                        <input type="text" class="form-control" name="ImageUrl" value="@course.ImageUrl" />
                                    </div>
                                </div>
                                <div class="mt-3 d-flex gap-2">
                                    <button type="submit" class="btn btn-success">Enregistrer</button>
                                    <button type="button"
                                            class="btn btn-outline-secondary js-cancel-edit"
                                            data-course-id="@course.Id">
                                        Annuler
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const editButtons = document.querySelectorAll('.js-edit-course');
            const cancelButtons = document.querySelectorAll('.js-cancel-edit');

            function toggleRow(courseId, show) {
                const row = document.getElementById(`edit-course-${courseId}`);
                if (!row) return;
                row.classList.toggle('d-none', !show);
            }

            editButtons.forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const courseId = btn.getAttribute('data-course-id');
                    if (!courseId) return;
                    toggleRow(courseId, true);
                });
            });

            cancelButtons.forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const courseId = btn.getAttribute('data-course-id');
                    if (!courseId) return;
                    toggleRow(courseId, false);
                });
            });
        })();
    </script>
}
