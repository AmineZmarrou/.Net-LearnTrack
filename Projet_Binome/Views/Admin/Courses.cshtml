@model IEnumerable<Projet_Binome.Models.Course>
@{
    ViewData["Title"] = "Administration - Courses";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Gestion des cours</h2>
    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Users">Gérer les utilisateurs</a>
</div>

<div class="card mb-4">
    <div class="card-header">Ajouter un cours</div>
    <div class="card-body">
        <form asp-action="CreateCourse" method="post">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Titre</label>
                    <input name="Title" class="form-control" required />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Description</label>
                    <input name="Description" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">ImageUrl</label>
                    <input name="ImageUrl" class="form-control" placeholder="/images/xxx.jpg" />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Cours existants</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>ImageUrl</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td>@course.ImageUrl</td>
                        <td class="text-end">
                            <form asp-action="UpdateCourse" method="post" class="d-inline">
                                <input type="hidden" name="Id" value="@course.Id" />
                                <input type="text" class="form-control form-control-sm d-inline-block w-auto me-1" name="Title" value="@course.Title" required />
                                <input type="text" class="form-control form-control-sm d-inline-block w-auto me-1" name="Description" value="@course.Description" required />
                                <input type="text" class="form-control form-control-sm d-inline-block w-auto me-1" name="ImageUrl" value="@course.ImageUrl" />
                                <button type="submit" class="btn btn-sm btn-success">Mettre à jour</button>
                            </form>
                            <form asp-action="DeleteCourse" method="post" class="d-inline ms-2" onsubmit="return confirm('Supprimer ce cours ?');">
                                <input type="hidden" name="id" value="@course.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
