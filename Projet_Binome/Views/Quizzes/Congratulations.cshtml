@model Projet_Binome.Models.Certificate

@{
    ViewData["Title"] = "Congratulations!";
}

<h1>Bravo @Model.UserName !</h1>
<p>Vous avez reussi le quiz du cours <strong>@Model.Course.Title</strong>.</p>
<p>Score : @ViewBag.Score / @ViewBag.Total (@ViewBag.Percent%).</p>

<p class="mt-3">
    <a class="btn btn-success" asp-controller="Certificates" asp-action="Display" asp-route-id="@Model.Id">Voir mon certificat</a>
    <a class="btn btn-link" asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">Retour au cours</a>
</p>
