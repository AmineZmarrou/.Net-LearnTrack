@model Projet_Binome.Models.Certificate

@{
    ViewData["Title"] = "Certificate of Completion";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Certificate of Completion</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        @@import url("https://fonts.googleapis.com/css2?family=Cabin:wght@400;600&family=Newsreader:wght@500;700&display=swap");

        :root {
            --ink: #2a1b12;
            --muted: #6b4b2b;
            --accent: #c2410c;
            --gold: #d4a437;
            --paper: #fffaf4;
        }

        body {
            font-family: "Cabin", "Segoe UI", sans-serif;
            background: radial-gradient(900px 500px at 10% -10%, #ffe4c7, transparent 60%),
                        radial-gradient(900px 500px at 90% -10%, #f9e7d2, transparent 60%),
                        #f7f1e8;
            color: var(--ink);
            padding: 24px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .certificate {
            max-width: 980px;
            margin: 0 auto;
            background: var(--paper);
            border-radius: 22px;
            border: 2px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 20px 50px rgba(17, 12, 5, 0.2);
            padding: 48px;
            position: relative;
            overflow: hidden;
        }

        .certificate::before,
        .certificate::after {
            content: "";
            position: absolute;
            width: 112px;
            height: 112px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, #fef3c7, #fde8d8);
            opacity: 0.7;
        }

        .certificate::before {
            top: -20px;
            left: -20px;
        }

        .certificate::after {
            bottom: -20px;
            right: -20px;
        }

        .certificate-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 24px;
            margin-bottom: 24px;
        }

        .brand {
            font-family: "Newsreader", "Times New Roman", serif;
            font-size: 20px;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            color: var(--muted);
        }

        .certificate-title {
            font-family: "Newsreader", "Times New Roman", serif;
            font-size: 44px;
            font-weight: 700;
            margin: 0;
        }

        .subtitle {
            color: var(--muted);
            font-size: 18px;
        }

        .recipient {
            margin: 24px 0 18px;
            font-size: 36px;
            font-style: italic;
            color: #166534;
        }

        .course-name {
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 18px;
        }

        .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
            margin-top: 30px;
        }

        .date {
            color: var(--muted);
            font-size: 15px;
        }

        .signature {
            text-align: right;
            font-size: 14px;
            color: var(--muted);
        }

        .signature-line {
            margin-top: 6px;
            width: 180px;
            border-top: 2px solid rgba(0, 0, 0, 0.2);
            display: inline-block;
        }

        .medal {
            width: 96px;
            height: 96px;
            flex: 0 0 auto;
        }

        .seal {
            display: grid;
            place-items: center;
            width: 96px;
            height: 96px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, #ffe9a8, #d4a437);
            box-shadow: inset 0 2px 6px rgba(255, 255, 255, 0.6), 0 10px 18px rgba(212, 164, 55, 0.35);
            border: 3px solid rgba(0, 0, 0, 0.08);
        }

        .medal-text {
            font-family: "Newsreader", "Times New Roman", serif;
            font-size: 14px;
            text-align: center;
            color: #6b4b2b;
            letter-spacing: 0.08em;
        }

        @@media print {
            body {
                background: #fff;
            }
            .certificate {
                box-shadow: none;
            }
        }
    </style>
</head>
<body>
    <div class="certificate">
        <div class="certificate-header">
            <div>
                <div class="brand">LearnTrack</div>
                <h1 class="certificate-title">Certificate of Completion</h1>
                <div class="subtitle">This certifies that the learner named below has successfully completed the course.</div>
            </div>
            <div class="seal">
                <div class="medal-text">EXCELLENCE</div>
            </div>
        </div>

        <div class="recipient">@Model.UserName</div>
        <div class="subtitle">has completed the course</div>
        <div class="course-name">@Model.Course.Title</div>

        <div class="details">
            <div class="date">Issued on @Model.CompletionDate.ToString("MMMM dd, yyyy")</div>
            <div class="signature">
                Director, LearnTrack
                <div class="signature-line"></div>
            </div>
        </div>
    </div>
</body>
</html>
