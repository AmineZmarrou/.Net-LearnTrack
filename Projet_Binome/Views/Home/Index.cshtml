@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <p class="eyebrow">LearnTrack</p>
                <h1 class="display-4 fw-bold">Build skills that stick.</h1>
                <p class="lead text-muted">
                    LearnTrack helps you learn faster with structured courses, short lessons, and quizzes that prove real progress.
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary btn-lg" asp-controller="Courses" asp-action="Index">Explorer les cours</a>
                    @if ((User.Identity?.IsAuthenticated ?? false) && !User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-secondary btn-lg" asp-controller="Progress" asp-action="Index">Voir ma progression</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary btn-lg" asp-controller="Account" asp-action="Login">Se connecter</a>
                    }
                </div>
            </div>
            <div class="col-lg-5">
                <div class="hero-card">
                    <h3 class="mb-3">Your next milestone</h3>
                    <p class="text-muted mb-4">Complete lessons, pass the quiz, and unlock a shareable certificate.</p>
                    <div class="hero-stats">
                        <div class="stat-card">
                            <div class="stat-value">@ViewBag.CourseCount</div>
                            <div class="stat-label">Courses</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">@ViewBag.LessonCount</div>
                            <div class="stat-label">Lessons</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">@ViewBag.QuizPassRate%</div>
                            <div class="stat-label">Quiz pass</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="home-section">
    <div class="container">
        <div class="section-heading text-center">
            <p class="eyebrow">Why LearnTrack</p>
            <h2 class="fw-bold">A focused learning flow</h2>
            <p class="text-muted">Everything is designed to keep you moving from lesson to certificate.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon-badge">
                        <svg viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M5 4h10a3 3 0 0 1 3 3v13H8a3 3 0 0 0-3 3V4z" fill="none" stroke="currentColor" stroke-width="1.6"/>
                            <path d="M8 4v16" fill="none" stroke="currentColor" stroke-width="1.6"/>
                        </svg>
                    </div>
                    <h3>Interactive courses</h3>
                    <p>Short lessons with clear goals and practical examples.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon-badge">
                        <svg viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M12 17h.01" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                            <path d="M9.5 9.5a2.7 2.7 0 1 1 4.1 2.3c-.9.6-1.6 1.2-1.6 2.2" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
                            <circle cx="12" cy="12" r="9" fill="none" stroke="currentColor" stroke-width="1.6"/>
                        </svg>
                    </div>
                    <h3>Smart quizzes</h3>
                    <p>Track understanding and prove mastery with instant feedback.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="icon-badge">
                        <svg viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M7 3h10v8a5 5 0 1 1-10 0V3z" fill="none" stroke="currentColor" stroke-width="1.6"/>
                            <path d="M9 17l-1 4 4-2 4 2-1-4" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Certificates</h3>
                    <p>Earn a certificate the moment you pass the final quiz.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="home-section certificate-journey">
    <div class="container">
        <div class="section-heading text-center">
            <p class="eyebrow">Certification</p>
            <h2 class="fw-bold">From course to certificate</h2>
            <p class="text-muted">Four steps. One clear learning path.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="step-card">
                    <h4>1. Choose</h4>
                    <p>Pick a course that matches your goals.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <h4>2. Learn</h4>
                    <p>Complete lessons and save your progress.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <h4>3. Pass</h4>
                    <p>Score 70% or higher on the quiz.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <h4>4. Share</h4>
                    <p>Download your certificate instantly.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="home-section">
    <div class="container">
        <div class="cta-card">
            <div>
                <h2 class="fw-bold mb-2">Ready to start?</h2>
                <p class="text-muted mb-0">Browse the catalog and begin your first lesson today.</p>
            </div>
            <a class="btn btn-primary btn-lg" asp-controller="Courses" asp-action="Index">Voir le catalogue</a>
        </div>
    </div>
</section>
